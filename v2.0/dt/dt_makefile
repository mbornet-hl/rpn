CC				= gcc

libmath.so		:  dt_mod_math.c dt_serial.h serial
				@ echo "SERIAL = `cat serial`"
				$(CC) $(CFLAGS) -lm -DSERIAL=`cat serial` -shared -fPIC -o libmath.so dt_mod_math.c
				cp libmath.so ../rpn_modules
				@ inc_serial
